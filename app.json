{
  "expo": {
    "name": "figma",
    "slug": "figma",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permita $(PRODUCT_NAME) acessar sua câmera."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermision": "Permita $(PRODUCT_NAME) a acessar suas fotos.",
          "savePhotosPermision": "Permita $(PRODUCT_NAME) a salvar suas fotos.",
          "isAccessMediaLocationEnable": true
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Permita $(PRODUCT_NAME) acessar sua câmera."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ]
  }
}
